{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center text-uppercase m-5">Reviews list</h1>

    <a class="btn btn-success" href="{{ path('review_new') }}">Create a new review</a>

    <table class="table table-bordered table-hover">
        <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>User Rated</th>
            <th>Note</th>
            <th>Text</th>
            <th>Publicationdate</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td><a href="{{ path('review_show', { 'id': review.id }) }}">{{ review.id }}</a></td>
                <td>{{ review.reviewAuthor }}</td>
                <td>{{ review.userRated }}</td>
                <td>{{ review.note }}</td>
                <td>{{ review.text }}</td>
                <td>{% if review.publicationDate %}{{ review.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('review_show', { 'id': review.id }) }}">show</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('review_edit', { 'id': review.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
