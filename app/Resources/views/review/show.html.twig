{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center text-uppercase m-5">Review</h1>

        <a class="btn btn-primary btn-sm" href="{{ path('review_index') }}">Back to the list</a>
        <a class="btn btn-warning btn-sm" href="{{ path('review_edit', { 'id': review.id }) }}">Edit</a>
        {{ form_start(delete_form) }}
        <input class="btn btn-danger btn-sm" type="submit" value="Delete">
        {{ form_end(delete_form) }}

    <table class="table table-bordered table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ review.reviewAuthor }}</td>
        </tr>
        <tr>
            <th>User Rated</th>
            <td>{{ review.userRated }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ review.note }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ review.text }}</td>
        </tr>
        <tr>
            <th>Publicationdate</th>
            <td>{% if review.publicationDate %}{{ review.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>

{% endblock %}
